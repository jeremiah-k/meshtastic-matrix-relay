# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`" >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

# For Cygwin, ensure paths are in UNIX format before anything is touched.
if ${cygwin} ; then
    [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# Attempt to find JAVACMD
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if ! ${cygwin} && ! ${msys} && ! ${nonstop} ; then
    if [ "$MAX_FD" = "maximum" ] || [ "$MAX_FD" = "max" ] ; then
        # Increase the maximum file descriptors, default is 1024 on many systems.
        # Try molding the limit to the system default.
        # Some systems have default ulimit limits that are too low for Gradle.
        # Use "ulimit -n" to find out the limit for your OS.
        # We use "ulimit -H -n" to find out the hard limit on the OS.
        # We increase the limit to that value, or to 4096 if the hard limit is unlimited.
        MAX_FD_HARD=`ulimit -H -n`
        if [ $? -eq 0 ] ; then
            if [ "$MAX_FD_HARD" = "unlimited" ] ; then
                MAX_FD="4096"
            else
                MAX_FD="$MAX_FD_HARD"
            fi
            ulimit -n "$MAX_FD"
            if [ $? -ne 0 ] ; then
                warn "Could not set maximum file descriptor limit: $MAX_FD"
            fi
        else
            warn "Could not query maximum file descriptor limit"
        fi
    fi
fi

# Add the jar to the classpath
CLASSPATH="$APP_HOME/gradle/wrapper/gradle-wrapper.jar"

# Set script variables
GRADLE_OPTS_PARAM=()
while [ $# -gt 0 ]; do
    case "$1" in
        --*)
            # The script is the only one that uses double-dashed options.
            # This is to distinguish from options passed to Gradle.
            # An exception is --version, which is a valid Gradle option.
            if [ "$1" = '--version' ]; then
                GRADLE_OPTS_PARAM[${#GRADLE_OPTS_PARAM[*]}]="$1"
            else
                # Other options are passed to the script.
                echo "Unknown command-line option: $1"
                exit 1
            fi
            shift
            ;;
        *)
            # Not a script option, pass it to Gradle.
            GRADLE_OPTS_PARAM[${#GRADLE_OPTS_PARAM[*]}]="$1"
            shift
            ;;
    esac
done

# Split up the JVM options only if it is commented out, so it can be easily turned on
# if needed.
# DEFAULT_JVM_OPTS="-Xmx64m -Xms64m"

# Execute Gradle
exec "$JAVACMD" \
    ${DEFAULT_JVM_OPTS} \
    -classpath "$CLASSPATH" \
    org.gradle.wrapper.GradleWrapperMain \
    "${GRADLE_OPTS_PARAM[@]}"
